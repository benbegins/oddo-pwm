{% set hero = post.meta('hero') %}

{% if hero.page_title %}
<section class="lg:relative">
    <div class="img-container relative aspect-square sm:aspect-video lg:aspect-auto lg:absolute lg:z-0 lg:inset-0 lg:overflow-hidden">
        {{ function('wp_get_attachment_image', hero.visual.id, "2048x2048") }}
        <div class="lg:hidden absolute z-10 inset-0 bg-[#000000] opacity-30"></div>
    </div>
    <div class="hidden lg:block absolute z-10 inset-0 bg-[#000000] opacity-30"></div>
    <div class="container mt-6 lg:relative lg:z-20 lg:text-white lg:py-80 lg:min-h-[85vh] lg:flex lg:flex-col lg:justify-center">
        <h1 class="font-bold uppercase text-sm flex items-center gap-4 lg:text-base">
            <div class="h-px w-8 bg-black lg:w-12 lg:bg-white"></div>
            {{ hero.page_title }}
        </h1>
        <div class="text-2xl lg:text-5xl leading-tight mt-4 lg:grid lg:grid-cols-6 lg:mt-10">
            <div class="lg:col-span-5">
                <p class="font-baskerville italic">{{ hero.catch_phrase_part_1 }}</p>
                <p class="font-light uppercase">{{ hero.catch_phrase_part_2 }}</p>
            </div>
        </div>
        <div class="hidden lg:block absolute bottom-0 right-6 rotate-90 origin-bottom-right -translate-x-[20%]">
            <div class="text-white uppercase tracking-widest text-xs relative inline-block">
                <div class="relative py-1 inline-block after:block after:absolute after:h-px after:w-full after:bg-white after:top-full after:left-0">Scroll</div>
                <div class="h-px w-32 bg-white opacity-50"></div>
            </div>
        </div>
    </div>
</section>
{% else %}
    <section class="bg-armerie h-96"></section>
{% endif %}