                    </li>
                    <li>
                        <a href="" class="flex items-center justify-center min-w-[150px] gap-2 px-5 pt-2 pb-2.5 border border-white rounded-full fill-white transition-colors duration-200 hover:bg-rouge hover:border-rouge">
                            <div class="flex-none">
                                <span class="icon-googleplay"></span>
                            </div>
                            <span>Google Play</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="lg:grid lg:grid-cols-2 lg:gap-10">
                {# Contact #}
                <div class="mt-10 md:mt-0">
                    <p class="mb-4">{{ __('Pour toute information', 'bemy') }}</p>
                    <a href="mailto:{{options.email_contact}}" class="inline-flex items-center justify-center min-w-[150px] h-11 px-5 pt-2 pb-2.5 border border-white rounded-full transition-colors duration-200 hover:bg-rouge hover:border-rouge">
                        {{ __('Contactez-nous', 'bemy') }}
                    </a>
                </div>

                {# RS #}
                <div class="mt-10 lg:mt-0">
                    <ul class="flex gap-8 items-center">
                        <li>
                            <a href="{{options.rs.twitter}}" class="transition-colors duration-200 hover:text-rouge">
                                <span class="icon-x"></span>
                            </a>
                        </li>
                        <li>
                            <a href="{{options.rs.linkedin}}" class="transition-colors duration-200 hover:text-rouge">
